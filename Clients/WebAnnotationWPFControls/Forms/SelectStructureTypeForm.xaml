<Window x:Class="WebAnnotation.UI.Forms.SelectStructureTypeForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrl="clr-namespace:WebAnnotation.UI.Controls"
             xmlns:local="clr-namespace:WebAnnotation.UI.Forms"
             xmlns:conv="clr-namespace:WebAnnotation.WPF.Converters"
             xmlns:properties="clr-namespace:WebAnnotation.WPF.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
            Width="200" Height="200"
            SizeToContent="WidthAndHeight"
            Topmost="True"
            Title="Select Structure Type"
            d:DataContext="{d:DesignData /SampleData/MockDataSampleData.xaml}"
            Name="_this">
    <Window.Resources>
        <conv:StructureIDsToStructureObjsConverter x:Key="StructureIDsToStructureObjsConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions> 
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Source={x:Static properties:Settings.Default},
                                                            Path=FavoriteStructureIDs,
                                                            Mode=TwoWay,
                                                            Converter={StaticResource StructureIDsToStructureObjsConverter}}">
             
            
        </ListBox>
        <ctrl:StructureTypeTree x:Name="StructureTypesTree" Grid.Column="1" Grid.Row="0" DataContext="{Binding ElementName=_this, Path=RootStructureTypes, Mode=TwoWay}">
        </ctrl:StructureTypeTree>
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            Done!
        </Button>
    </Grid>
    
</Window>
