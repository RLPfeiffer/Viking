<UserControl x:Class="Viking.WPF.StringArrayAutoScroller"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Viking.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300"
             IsTabStop="False"
             Focusable="False"
             Margin="0"  Padding="0">
    <ComboBox Name="comboHelpText" Text="Default"  IsEditable="False" ItemsSource="{Binding Path=ObservableHelpStrings}" IsSynchronizedWithCurrentItem="True" FontSize="16" IsTabStop="False" Focusable="False">
    </ComboBox>
</UserControl>
