@model IList<IdentityServer.Models.UserViewModels.GroupDetailsViewModel>

<table>
    @for(int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>
                @Html.HiddenFor(x => Model[i].Id)
                @Html.HiddenFor(x => Model[i].Name) 
                @Html.DisplayFor(x => Model[i].Name) 
                @Html.Partial("~/Views/Shared/GroupChildrenTreeView.cshtml", Model[i].Children)  
            </td>
        </tr>            
    }
</table>
