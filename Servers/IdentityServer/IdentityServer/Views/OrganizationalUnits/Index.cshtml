@using Viking.Identity.Server.Authorization
@model IEnumerable<Viking.Identity.Models.OrganizationalUnit>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Children)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (item.Parent != null)
                    {
                        <a asp-action="Details" asp-route-id="@item.ParentID.Value">@Html.DisplayFor(modelItem => item.Parent.Name)</a>
                    }
                </td>
                <td>
                    <ul class="no-bullets">
                        @for (int i = 0; i < item.Children.Count(); i++)
                        {
                            <a asp-action="Details" asp-route-id="@item.Children[i].Id">@Html.DisplayFor(modelItem => item.Children[i].Name)</a>
                        } 
                    </ul>
                </td>
                <td>
                    @if ((await AuthorizationService.AuthorizeAsync(User, item, Operations.GroupAccessManager)).Succeeded)
                    {
                        <a asp-action="CreateChild" asp-controller="Resources" asp-route-ParentId="@item.Id">Create Child</a><text> | </text>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><text> | </text>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a><text> | </text>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                    else {
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
