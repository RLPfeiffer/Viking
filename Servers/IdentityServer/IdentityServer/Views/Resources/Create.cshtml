@model Viking.Identity.Server.WebManagement.Models.UserViewModels.CreateResourceViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Resource</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="~/Views/Shared/_CreateResourceBasicsPartialForm.cshtml" for="@Model" />
            <div class="form-group">
                <label asp-for="ResourceTypeId" class="control-label"></label>
                <select asp-for="ResourceTypeId" asp-items="@ViewBag.AvailableResourceTypes" required></select>
                <span asp-validation-for="ResourceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
